## But use "ENV key=value" instead of the traditional "ENV key value" format
## 但使用“ENV key=value”而不是传统的“ENV key value”格式

## The following content is the custom added content
## 下面的内容是自定义新增的内容

RUN cd /usr/local/etc/php-fpm.d && \
    sed -i 's/^listen = 9000$/listen = \/var\/run\/php-fpm.sock/' zz-docker.conf && \
    sed -i '/^listen = \/var\/run\/php-fpm.sock/a listen.owner = www-data' zz-docker.conf && \
    sed -i '/^listen.owner = www-data/a listen.group = www-data' zz-docker.conf && \
    sed -i '/^listen.group = www-data/a listen.mode = 0600' zz-docker.conf


RUN cd /etc/nginx && \
    sed -i 's/^user  nginx;/user  www-data;/' nginx.conf


RUN { \
    echo 'server {'; \
    echo '    listen       80;'; \
    echo '    listen  [::]:80;'; \
    echo '    server_name  localhost;'; \
    echo ''; \
    echo '    #error_page  404              /404.html;'; \
    echo ''; \
    echo '    # redirect server error pages to the static page /50x.html'; \
    echo '    #'; \
    echo '    error_page   500 502 503 504  /50x.html;'; \
    echo '    location = /50x.html {'; \
    echo '        root   /usr/share/nginx/html;'; \
    echo '    }'; \
    echo ''; \
    echo '    location / {'; \
    echo '        root           /var/www/html;'; \
    echo '        index          index.php index.html;'; \
    echo '    }'; \
    echo '    location ~* \.php$ {'; \
    echo '        root           /var/www/html/;'; \
    echo '        index          index.php;'; \
    echo '        fastcgi_pass   unix:/var/run/php-fpm.sock;'; \
    echo '        fastcgi_index  index.php;'; \
    echo '        fastcgi_param  SCRIPT_FILENAME  $document_root/$fastcgi_script_name;'; \
    echo '        include        fastcgi_params;'; \
    echo '    }'; \
    echo '}'; \
} | tee /etc/nginx/conf.d/default.conf

COPY ./start.sh /start.sh
RUN  chmod +x /start.sh

COPY ./init.sh /init.sh
RUN  chmod +x /init.sh

